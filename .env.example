# Example environment variables for local development and deployment
# Copy this to .env and fill in real values. Do NOT commit real secrets.

# Required by Eyes-of-an-Addict/app.py
SECRET_KEY=replace-with-a-long-random-string

# Database (Postgres recommended for production)
# Example: postgres://user:password@host:5432/dbname
DATABASE_URL=sqlite:///dev.db

# SendGrid (optional unless you send emails)
SENDGRID_API_KEY=

# Stripe (optional unless you use billing)
STRIPE_SECRET_KEY=

# Redis URL for RQ workers (e.g., redis://:password@host:6379/0)
REDIS_URL=
